int main(void) {
    calibrateServos();

}

void checkpoint1(void){
    timer_init();
    lcd_init();
    cyBot_uart_init();
    cyBOT_init_Scan(0b0111);
    right_calibration_value = 290500;
    left_calibration_value = 1209250;
}

void calibrateServos(void){

    timer_init();
    lcd_init();

    cyBOT_init_Scan(0b0111);
    cyBOT_SERVO_cal();

}
